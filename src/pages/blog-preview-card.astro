---
import Layout from "../layouts/Layout.astro";
import { Picture } from "astro:assets";
import blogPreview from "../assets/blog-preview-card-main/assets/images/illustration-article.svg";
import avatar from "../assets/blog-preview-card-main/assets/images/image-avatar.webp";
import { Card, CardTitle, CardHeader } from "../components/ui/card";
import "@fontsource-variable/figtree";

const tags = ["Learning"];
---

<Layout title="Frontend Mentor | Blog Preview Card">
    <main
        class="flex h-[100vh] w-full items-center justify-center bg-[#F5D04E] p-5 font-figtree"
    >
        <Card
            className="w-[17.5rem] rounded-2xl border border-black shadow-[0.4rem_0.4rem_0_0_#000]"
        >
            <CardHeader className="gap-2">
                <Picture
                    src={blogPreview}
                    alt="Preview Image"
                    class="h-40 w-64 rounded-xl"
                    style={{ objectFit: "cover" }}
                />

                <div class="text-sm font-bold">
                    {
                        tags.map((tag) => (
                            <span class="rounded bg-[#F5D04E] px-2 py-1 shadow-[1px_1px_1px_0_rgba(0,0,0,.2)]">
                                {tag}
                            </span>
                        ))
                    }
                </div>

                <div class="text-[.7rem] font-[700] text-neutral-600">
                    Published 21 Dec 2023
                </div>

                <CardTitle className=" text-lg font-[800]">
                    HTML &amp; CSS Foundations
                </CardTitle>
                <div class="p-0 text-xs font-[600] text-neutral-400">
                    These languages are the backbone of every website,
                    definining structure, content, and presentation.
                </div>
                <div class="flex items-center gap-3">
                    <Picture src={avatar} alt="Avatar Image" class="size-7" />
                    <div class="text-sm font-[800]">Greg Hooper</div>
                </div>
            </CardHeader>
        </Card>
    </main>
</Layout>
