---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import qrCode from "../../assets/QRCodeComponent/image-qr-code.png";
---

<Layout title="Frontend Mentor | QR code component">
    <div class="flex h-[100vh] w-full items-center justify-center bg-sky-200">
        <div class="w-[20rem] rounded-3xl bg-white p-4">
            <Image src={qrCode} alt="QR Code" class="size-72 rounded-xl" />
            <div class="flex flex-col justify-between gap-4 p-4 text-center">
                <div class="text-xl font-bold text-neutral-800">
                    Improve your front-end skills by building projects
                </div>
                <div class="text-sm text-neutral-500">
                    Scan the QR code to visit Frontend Mentor and take your
                    coding skills to the next level
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .mid-text {
        color: green;
        font-size: 1.3rem;
    }
</style>
